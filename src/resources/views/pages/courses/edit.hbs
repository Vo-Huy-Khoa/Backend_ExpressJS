<form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT"
    style="display: flex; flex-direction: column; margin-top:20px; gap: 10px">
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="name" value="{{course.name}}" id="{{course.name}}">
    <label for="description">Description</label>
    <input type="text" name="description" placeholder="Description" value="{{course.description}}"
        id="{{course.description}}">
    <button style="width:150px; height: 50px" type="submit">EDIT</button>
</form>



